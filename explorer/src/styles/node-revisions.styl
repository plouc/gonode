.node_revisions
  display: block
  position: absolute
  top:    0
  right:  0
  bottom: 0
  background-color: $color-node-revs-background
  overflow hidden
  width $node-revisions-width
  box-shadow 1px 0 2px rgba(0, 0, 0, .5) inset

  &:before
    content ' '
    display block
    position absolute
    height 100%
    width $node-revisions-stroke-width
    background-color $color-node-revs-stroke
    top  0
    left ($node-revisions-width / 2 - $node-revisions-stroke-width / 2)

  &_wrapper
    position absolute
    width 100%
    top    0
    right  0
    bottom 0
    overflow-y auto
    padding 10px 0 60px 0

  &_more
    position absolute
    bottom 15px
    left   ($node-revisions-width / 2)
    margin-left $node-revisions-more-size * -.5
    width  $node-revisions-more-size
    height $node-revisions-more-size
    line-height $node-revisions-more-size
    cursor pointer
    text-align center
    background $color-node-revs-more-background
    color      $color-node-revs-background
    border-radius ($node-revisions-more-size / 2)
    font-size 12px
    box-shadow 0 0 3px rgba(0, 0, 0, .85)
    transform rotate(0)
    transition transform 400ms cubic-bezier(0.250, 0.460, 0.450, 0.940)

    &:hover
      transform rotate(180deg)

  &_item
    position relative
    width  $node-revisions-width
    height $node-revision-height
    color $color-node-revs-text

    &-enter
      opacity 0.01
      transform translate3d(0, 0, 0) scale(0.4)

    &-enter&-enter-active
      opacity 1
      transform translate3d(0, 0, 0) scale(1)
      transition opacity   400ms cubic-bezier(0.250, 0.460, 0.450, 0.940),
                 transform 400ms cubic-bezier(0.250, 0.460, 0.450, 0.940)

    &-leave
      opacity 1
      transform translate3d(0, 0, 0) scale(1)

    &-leave&-leave-active
      opacity 0.01
      transform translate3d(0, 0, 0) scale(0.4)
      transition opacity   400ms cubic-bezier(0.250, 0.460, 0.450, 0.940),
                 transform 400ms cubic-bezier(0.250, 0.460, 0.450, 0.940)

    &_current
      display block
      position absolute
      top  $node-revision-circle-size * 0.86
      left $node-revision-circle-size * 0.86
      margin-top  $node-revision-current-size * -.5
      margin-left $node-revision-current-size * -.5
      width  $node-revision-current-size
      height $node-revision-current-size
      background $color-node-revs-current
      border-radius ($node-revision-current-size / 2)
      border 2px solid $color-node-revs-background

    &_circle
      position absolute
      top  50%
      left 50%
      margin-top  $node-revision-circle-size * -.5
      margin-left $node-revision-circle-size * -.5
      cursor pointer
      display block
      font-weight 800
      width  $node-revision-circle-size
      height $node-revision-circle-size
      line-height $node-revision-circle-size
      font-size 14px
      border-radius ($node-revision-circle-size / 2)
      text-align center
      background-color $color-node-rev-circle-background
      transform translate3d(0, 0, 0) scale(0.8)
      transition transform  300ms cubic-bezier(0.250, 0.460, 0.450, 0.940),
                 background 300ms cubic-bezier(0.250, 0.460, 0.450, 0.940),
                 color      300ms cubic-bezier(0.250, 0.460, 0.450, 0.940)

      &:hover
        transform translate3d(0, 0, 0) scale(0.9)
        background-color $color-node-rev-circle-background-hover
        color            $color-node-revs-text-hover

      &-active,
      &-active:hover
        transform translate3d(0, 0, 0) scale(1)
        background-color $color-node-rev-circle-background-active
        color            $color-node-revs-text-active

