.login,
.logout
  width: 100%
  height: 100%
  display: flex
  align-items: center
  justify-content: center

  &_wrapper
    width: $login-width

  &_header
    &_brand
      display: block
      text-transform: uppercase
      padding: 0
      text-align: center
      font-size: 36px
      margin: 0
      margin-bottom: 30px
      font-weight: 900
      color: #fff

      strong
        font-weight: 500
        color: #62b6ff

  &_error
    text-align: center
    color: #ff5c4f
    margin-bottom: 20px

  .form-group
    input
      border: none
      width: 100%
      padding: 20px 15px
      border-radius: 0 0 $login-border-radius $login-border-radius

    &:first-child
      input
        border-radius: $login-border-radius $login-border-radius 0 0
        border-bottom: 1px solid $color-main-background



  .button
    text-transform: uppercase
    margin-top: 30px
    width: 100%
    padding: 20px 0